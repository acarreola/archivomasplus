# =============================================================================
# CONFIGURACIÓN NATIVA PARA MAC M4 - ArchivoPlus
# =============================================================================
# Este archivo es para instalación NATIVA (sin Docker)
# Copiar como .env.local y configurar con tus valores

# -----------------------------------------------------------------------------
# Django Backend
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=CAMBIAR_POR_UNA_CLAVE_SECRETA_MUY_LARGA_Y_ALEATORIA_DE_50_CARACTERES_MINIMO
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100,tu-mac-m4.local

# CORS - Permitir frontend acceder al API
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://192.168.1.100,http://tu-mac-m4.local
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,http://192.168.1.100,http://tu-mac-m4.local

# Security (activar en producción con HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# -----------------------------------------------------------------------------
# Base de Datos PostgreSQL (Nativa - localhost)
# -----------------------------------------------------------------------------
DB_ENGINE=postgres
DB_NAME=archivoplus_prod
DB_USER=archivoplus_user
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO_POSTGRES
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis (Nativo - localhost)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO_REDIS
REDIS_DB=0

# -----------------------------------------------------------------------------
# Paths de Archivos (macOS nativos)
# -----------------------------------------------------------------------------
# Reemplazar 'tu-usuario' con tu nombre de usuario de macOS
MEDIA_ROOT=/Users/tu-usuario/Servers/ArchivoPlus/media
STATIC_ROOT=/Users/tu-usuario/Servers/ArchivoPlus/static

# -----------------------------------------------------------------------------
# Optimizaciones para Mac M4
# -----------------------------------------------------------------------------
# FFmpeg - Aprovechar todos los cores del M4
FFMPEG_THREADS=10
FFMPEG_PRESET=fast
FFMPEG_HWACCEL=videotoolbox

# Celery - Procesamiento paralelo optimizado
CELERY_WORKER_CONCURRENCY=8
CELERY_WORKER_MAX_TASKS_PER_CHILD=10

# Python - Optimizaciones generales
PYTHONUNBUFFERED=1
OMP_NUM_THREADS=10

# -----------------------------------------------------------------------------
# Timezone
# -----------------------------------------------------------------------------
TZ=America/Mexico_City

# -----------------------------------------------------------------------------
# Email (Opcional - para notificaciones)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-de-gmail

# -----------------------------------------------------------------------------
# Límites de archivos
# -----------------------------------------------------------------------------
# Tamaño máximo de upload en MB (ajustar según necesidad)
MAX_UPLOAD_SIZE=5000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
