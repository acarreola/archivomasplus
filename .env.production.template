# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - ArchivoPlus
# =============================================================================

# -----------------------------------------------------------------------------
# Base de Datos PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_DB=archivoplus_prod
POSTGRES_USER=archivoplus_user
POSTGRES_PASSWORD=CAMBIAR_PASSWORD_SEGURO_POSTGRES
POSTGRES_HOST_AUTH_METHOD=md5

# -----------------------------------------------------------------------------
# Redis (Celery Broker)
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CAMBIAR_PASSWORD_SEGURO_REDIS

# -----------------------------------------------------------------------------
# Django Backend
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=CAMBIAR_DJANGO_SECRET_KEY_SUPER_SEGURA_DE_50_CARACTERES
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,tu-ip-servidor
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# URLs para frontend
VITE_API_URL=https://tu-dominio.com

# -----------------------------------------------------------------------------
# Puertos de Nginx
# -----------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# -----------------------------------------------------------------------------
# Email (Opcional - para notificaciones)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password

# -----------------------------------------------------------------------------
# Configuración adicional (Opcional)
# -----------------------------------------------------------------------------
# Timezone
TZ=America/Mexico_City

# Límites de archivos
FILE_UPLOAD_MAX_MEMORY_SIZE=268435456
DATA_UPLOAD_MAX_MEMORY_SIZE=268435456

# FFmpeg configuración
FFMPEG_THREADS=4
FFMPEG_PRESET=medium